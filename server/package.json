{
  "name": "chibichilo-server",
  "version": "2.5.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/npocccties/chibichilo",
    "directory": "server"
  },
  "scripts": {
    "test": "jest",
    "dev": "run-p dev:*",
    "dev:app": "tsup index.ts --watch --onSuccess 'node dist/index.js | pino-pretty'",
    "dev:db": "run-s build:prisma migrate seed",
    "build": "run-s build:prisma build:app",
    "build:app": "tsup index.ts",
    "build:prisma": "prisma generate",
    "migrate": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset --skip-seed",
    "seed": "prisma db seed",
    "zoom:import": "node -r esbuild-register utils/zoom/importCli.ts",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "prisma": {
    "seed": "node -r esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/swagger-ui": "^1.9.3",
    "@prisma/client": "^5.2.0",
    "hexoid": "^1.0.0",
    "node-ssh": "^13.1.0"
  },
  "devDependencies": {
    "@fastify/auth": "^4.3.0",
    "@fastify/cookie": "^9.0.4",
    "@fastify/cors": "^8.3.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/multipart": "^7.7.3",
    "@fastify/session": "^10.4.0",
    "@fastify/swagger": "^8.9.0",
    "@quixo3/prisma-session-store": "^3.1.13",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/kuromoji": "^0.1.3",
    "@types/node-schedule": "^2.1.0",
    "@types/serve-handler": "^6.1.1",
    "@types/spdx-expression-parse": "^3.0.2",
    "@types/strict-uri-encode": "^2.0.0",
    "@types/yauzl": "^2.10.3",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "class-validator": "^0.14.0",
    "class-validator-jsonschema": "^5.0.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "esbuild-register": "^3.4.2",
    "express-session": "^1.17.3",
    "fastify": "^4.22.2",
    "jest": "^29.6.4",
    "json-schema-to-ts": "^2.9.2",
    "jsonwebtoken": "^9.0.2",
    "kuromoji": "^0.1.2",
    "node-fetch": "^3.3.2",
    "node-interval-tree": "^2.1.2",
    "node-schedule": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "openid-client": "^5.4.3",
    "outdent": "^0.8.0",
    "pino-pretty": "^10.2.0",
    "prisma": "^5.2.0",
    "recursive-readdir-synchronous": "^0.0.4",
    "search-query-parser": "^1.6.0",
    "serve-handler": "^6.1.5",
    "spdx-expression-parse": "^3.0.1",
    "strict-uri-encode": "^2.0.0",
    "ts-jest": "^29.1.1",
